<div class="row">
  <div class="col-4">
 <img src="/assets/img/burger.png" width="500px" alt="burgerbox" class="backg img-fluid">
    <ul class="burgerList">
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-4">
    <h2>Burgers that are devoured!</h2>

    <ul class="devouredList">
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-blockDevoured devour=false}}
      {{/if}}
      {{/each}}
    </ul>
     <img src="/assets/img/eat.png" alt="ate" class="ateIt img-fluid">
  </div>
  <div class="col-4">

    <h2>Add a burger</h2>
    <form class="create-form">
      <div class="form-group">
        <input type="text" id="ca" name="name">
        <button type="submit">Add burger</button>
      </div>
    </form>
  </div>

</div>